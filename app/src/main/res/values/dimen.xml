<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Default screen margins, per the Android Design guidelines. -->
    <dimen name="activity_horizontal_margin">16dp</dimen>
    <dimen name="activity_vertical_margin">16dp</dimen>
    <dimen name="fab_margin">16dp</dimen>
    <dimen name="appbar_padding_top">8dp</dimen>

    <!-- Margins for the navigation view -->
    <dimen name="nav_header_vertical_spacing">30dp</dimen>
    <!-- Margin between the menu items in the navigation view -->
    <dimen name="design_navigation_separator_vertical_padding" tools:override="true">16dp</dimen>

    <!-- Margins for the section view -->
    <dimen name="section_header_vertical_margin">16dp</dimen>
    <dimen name="section_header_horizontal_margin">24dp</dimen>
    <dimen name="section_content_vertical_margin">4dp</dimen>
    <dimen name="section_content_horizontal_margin">4dp</dimen>

    <!-- Margins for the enlarged image buttons -->
    <dimen name="enlarged_image_button_margin">4dp</dimen>

    <!-- minimization square appears larger than fitted circle -->
    <dimen name="button_nav_size">32dp</dimen>
    <dimen name="button_minimize">24dp</dimen>

    <!-- Font size for the abstract content in the webview -->
    <dimen name="abstract_font_size">18px</dimen>

    <!-- Dimension for the images in the gallery -->
    <dimen name="image_gallery_height">180px</dimen>
    <!-- Dimension for the enlarged images -->
    <dimen name="image_enlarged_height">600px</dimen>

    <!-- padding between gallery images -->
    <dimen name="gallery_padding">1dp</dimen>


</resources>