<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Theme of the application, used in the android manifest -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- AppBarLayout theme -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- Theme of the popup that appears when clicking a menu item (only when not enough space) -->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Styles for the properties of a section -->
    <style name="SectionHeader">
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="SectionContent">
        <item name="android:typeface">sans</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
